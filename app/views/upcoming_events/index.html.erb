<div class="container-fluid">
  <div class="row bg-dark" style="color: rgba(255,205,142,1);">
    <div class="col d-flex justify-content-center">
      <h1 class="m-0">EVENT LINE UP</h1>
    </div>
  </div>
  <%= render @upcoming_events %>
</div>

<p id="notice"><%= notice %></p>

<h1>Upcoming Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming_events.each do |upcoming_event| %>
      <tr>
        <td><%= upcoming_event.title %></td>
        <td><%= upcoming_event.content %></td>
        <td><%= upcoming_event.date %></td>
        <td><%= link_to 'Show', upcoming_event %></td>
        <td><%= link_to 'Edit', edit_upcoming_event_path(upcoming_event) %></td>
        <td><%= link_to 'Destroy', upcoming_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Upcoming Event', new_upcoming_event_path %>
