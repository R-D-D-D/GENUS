<% provide(:page_title, "Index") %>

<p id="notice"><%= notice %></p>

<h1>Events</h1>

    <% @events.each do |event| %>
      <div class="card">
        <div class="card-body">
          <div class="card-title"><h3><%= event.title %></h3></div>
          <div class="card-text"><%= event.content.html_safe %></div>
          <div class="card-footer"><%= link_to 'Show', event %></div> 
        </div>
      </div>
    <% end %>


<br>

<%= link_to 'New Event', new_event_path %>

<%= will_paginate @events %>
