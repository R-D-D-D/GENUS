<% provide(:page_title, @title) %>

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>


<section id="events">
  <div class="container">
    <div class="row mt-5">
      <div class="col d-flex justify-content-center">
        <% if yield(:page_title) == "Upcoming" %>
          <h1>Upcoming</h1>
        <% else %>
          <h1>Past Events</h1>
        <% end %>
      </div>
    </div>
    <div class="row">
      <%= render @events %>
    </div>

    <div class="row justify-content-center mt-5">
      <%= will_paginate @events, class: 'pagination' %>
    </div>

  </div>
</section>
