<% provide(:page_title, "Index") %>

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<section id="events">
  <div class="container mt-3">
    <div class="row">
      <div class="col d-flex justify-content-center">
        <h1>Past Events</h1>
      </div>
    </div>
    <div class="row">
      <%= render @events %>
    </div>

    <%= link_to 'New Event', new_event_path %>

    <%= will_paginate @events %>
  </div>
</section>
