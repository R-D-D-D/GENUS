<% provide(:page_title, "Index") %>

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<section id="events">
  <div class="container">
    <div class="row my-5">
      <div class="col d-flex justify-content-center">
        <h1>Past Events</h1>
      </div>
    </div>
    <div class="row">
      <%= render @events %>
    </div>

    <% if @current_user %>
      <%= link_to 'New Event', new_event_path, class: 'btn' %>
    <% end %>

    <%= will_paginate @events %>
  </div>
</section>
