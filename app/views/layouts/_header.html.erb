<% if Rails.env.production? %>
  <header id="navbar" class="navbar navbar-sticky-top navbar-inverse navbar-background-img">
    <div class="container">
      <%= link_to "Blog", root_url %>
      <nav>
        <ul class='nav navbar-nav navbar-right'>
          <li><%= link_to "My Posts", events_front_path %> </li>
        </ul>
      </nav>
    </div>
  </header>
<% end %>

<% if yield(:page_title).include?("Home") %>
  <div class="container-fluid">

    <div class="row home-bg">
      <div class="col">
        <div class="row home-text">
          <h1>
            NUS Guitar Ensemble
          </h1>
        </div>
        <div class="row home-text">
          <h3>
            where the fun begins
          </h3>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col p-0">
        <div style="height:80px">
          <nav class="navbar navbar-expand-lg navbar-light" id="navbar">
            <%= render 'layouts/navbar' %>
          </nav>
        </div>
      </div>
    </div>
  </div>

<% else %>

  <div class="container-fluid">
    <div class="row">
      <div class="col p-0">
        <div style="height:80px">
          <nav class="navbar navbar-expand-lg navbar-light" id="navbar">
            <%= render 'layouts/navbar' %>
          </nav>
        </div>
      </div>
    </div>
  </div>
<% end %>