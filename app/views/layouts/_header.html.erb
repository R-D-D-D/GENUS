<% if yield(:page_title).eql?("NUS") %>

  <div class="container-fluid">
    <div class="row">
      <div class="col p-0">
        <div>
          <nav class="navbar navbar-expand-lg navbar-dark py-1" id="navbar">
            <%= render 'layouts/navbar' %>
          </nav>
        </div>
      </div>
    </div>

    <div class="row home-bg">
      <div class="container">
        <div class="row justify-content-center mt-3 welcome" id="welcome-word">
            <%= image_tag "welcome.png" %>
        </div>

        <div class="row">
          <div class="col">
            <div class="container mb-0">
              <div class="row">
                <div class="col">
                  <h1 class="home-text m-0"><%= phrase('NUS GUITAR ENSEMBLE') %></h1>
                </div>
              </div>
              <div class="row">
                <div class="col-2">

                </div>
                <div class="col-3">
                  <hr>
                </div>
                <div class="col-2 d-flex text-light align-items-center justify-content-center p-0">
                  <h2 class="font-italic m-0 text-center"><%= phrase('GENUS') %></h2>
                </div>
                <div class="col-3">
                  <hr>
                </div>
                <div class="col-2">

                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col d-flex justify-content-center">
            <p class="font-italic m-0"><%= phrase('A member of NUS Center For the Arts') %></p>
          </div>
        </div>

        <!-- begin of 4 icons -->
        <div class="row">
          <div class="container d-flex justify-content-center pt-5 mt-1">
            <div class="row">
              <div class="col-6 col-md-3">
                <div class="d-flex justify-content-center">
                  <%= link_to events_path(event_type: "Gallery") do %>
                    <i class="fas fa-photo-video fa-3x"></i>
                  <% end %>
                </div>
                <h5><%= phrase('Gallery') %></h5>
                <p><%= phrase('Check out our key events!') %></p>
              </div>

              <div class="col-6 col-md-3">
                <div class="d-flex justify-content-center">
                  <%= link_to events_path(event_type: "Upcoming") do %>
                    <i class="far fa-calendar-check fa-3x"></i>
                  <% end %>
                </div>
                <h5><%= phrase('Calendar') %></h5>
                <p><%= phrase('Find out more about upcoming events!') %></p>
              </div>

              <div class="col-6 col-md-3">
                <div class="d-flex justify-content-center">
                  <a href="https://www.youtube.com/user/NusGuitarEnsemble" target="_blank"><i class="fas fa-guitar fa-3x"></i></a>
                </div>
                <h5><%= phrase('Past Production') %></h5>
                <p><%= phrase('Watch videos from our previous concerts!') %></p>
              </div>

              <div class="col-6 col-md-3">
                <div class="d-flex justify-content-center">
                  <%= link_to join_us_path do %>
                    <i class="far fa-address-book fa-3x"></i>
                  <% end %>
                </div>
                <h5><%= phrase('Contact Us') %></h5>
                <p><%= phrase('For any inquiries') %></p>
              </div>
            </div>
          </div>
        </div>
        <!-- end of 4 icons -->

      </div>
    </div>
  </div>

<% else %>

  <div class="container-fluid">
    <div class="row">
      <div class="col p-0">
        <nav class="navbar navbar-expand-lg navbar-dark" id="navbar">
          <%= render 'layouts/navbar' %>
        </nav>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript" charset="utf-8">
    if ($(window).width() < 768) {
        $('#welcome-word').html('<h2 class="text-light p-0 m-0 text-center" style="font-size: 1rem;">WELCOME TO</h2>');
    } else {
        $('#welcome-word').html('<%= image_tag "welcome.png" %>');
    }
</script>